run /Applications/Rosetta/main/source/src/python/bindings/PyMOLPyRosettaServer.py
run /Users/alex/Documents/useful-functions.py

set fetch_path, /Users/alex/Downloads
set float_labels, 1

alias f, full

alias clean, \
  remove hydrogens \
  remove solvent \
  show sticks, organic

alias __, \
  clean \
  orient r

alias pywk, \
  # show sticks, r \
  label r and name ca, "%s%s" % (resn,resi) \
  set label_font_id, 7 

alias ribs, \
  clean \
  hide everything \
  show ribbon

alias lines-around-metal, \
  hide everything, \
  show ribbon, \ 
  set sphere_scale, 0.15 \
  show spheres, elem fe, \
  show lines, br. elem fe around 8

alias spiff, \ 
  set ray_trace_mode, 3 \
  set shininess, 0.67 \
  set ray_trace_fog, 0 \
  set ray_shadows, 0 \
  set depth_cue, 0 \ 
  bg_color white 

alias showme12, \ 
  sele /////C19 around 12 and /////CA \
  set sphere_scale, 0.681 \
  hide spheres \
  show spheres, sele

alias showme14, \ 
  sele /////C19 around 14 and /////CA \
  set sphere_scale, 0.681 \
  hide spheres \ 
  show spheres, sele

alias go, \ 
  showme14 \
  save around.pdb, sele \
  quit 
