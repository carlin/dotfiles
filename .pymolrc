set fetch_path, /Users/alex/Downloads

alias clean, \
  remove hydrogens; \
  remove solvent; \
  show sticks, organic

alias spiff, \ 
  set ray_trace_mode, 3; \
  set shininess, 0.67; \
  set ray_trace_fog, 0; \
  set ray_shadows, 0; \
  set depth_cue, 0; \ 
  bg_color white 

alias showme12, \ 
  sele /////C19 around 12 and /////CA \
  set sphere_scale, 0.681 \
  hide spheres \
  show spheres, sele

alias showme14, \ 
  sele /////C19 around 14 and /////CA \
  set sphere_scale, 0.681 \
  hide spheres \ 
  show spheres, sele

alias go, \ 
  showme14 \
  save around.pdb, sele \
  quit 
